<%- include("partials/header") -%>
<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="mb-3">
    <label>Title</label>
    <input type="text" class="form-control" name="postTitle" placeholder="New Blog" autocomplete="off">
</div>
<div class="mb-3">
    <label>Post</label>
    <textarea class="form-control" name="postBody" rows="8" cols="80" placeholder="Write your blog here"></textarea> 
</div>
    
    <button type="submit" class="btn btn-primary">Publish</button>

</form>

